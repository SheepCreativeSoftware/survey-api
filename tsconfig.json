{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"module": "NodeNext",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"declaration": true,
		"removeComments": false,
		"rootDirs": [
			"./",
		]
	},
	"include": [
		"./*",
		"./**/*"
	],
	
}